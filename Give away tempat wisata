    if pilihan == 1:
        print (" ")
        print ("*****************************Istana Bogor****************************")
        print (" tempat wisata yang dapat kamu kunjungi di Kota Bogor :")
        print ("Istana Bogor")
        print (" ")
        print ("SELAMAT BERLIBUR DI ISTANA BOGOR")
