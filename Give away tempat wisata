        print (" ")
        print ("*****************************Kebun Raya Bogor****************************")
        print (" tempat wisata yang dapat kamu kunjungi di Kota Bogor :")
        print ("Kebun Raya Bogor")
        print (" ")
        print ("SELAMAT BERLIBUR DI KEBUN RAYA BOGOR")
    elif pilihan == 3:
        print (" ")
        print ("*****************************Jungle Land****************************")
        print (" tempat wisata yang dapat kamu kunjungi di Kota Bogor :")
        print ("Jungle Land")
        print (" ")
        print ("SELAMAT BERLIBUR DI JUNGLE LAND")
        print ("\n")
    elif pilihan == 4:
        print (" ")
        print ("*****************************Kebun Raya Cibodas****************************")
        print (" tempat wisata yang dapat kamu kunjungi di Kota Bogor :")
        print ("Kebun Raya Cibodas")
        print (" ")
        print ("SELAMAT BERLIBUR DI KEBUN RAYA CIBODAS")
